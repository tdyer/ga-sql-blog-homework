<div class="posts">

<h1>Blog Homepage</h1>

<div class="entry">

	<% @entries.each do |entry| %>

		<span class="name"><%= entry["title"] %></span><br/>
		<span class="created">Created at <%= entry["created_at"] %></span><br/>
		<span class="contents">Text: <%= entry["contents"] %></span><br/>
		<br/>


		<form action='/blog/entry' method='post'>
			<select name="id">
			<option type='submit' value = "<%= entry["id"] %>">Submit</option>
			</select>
			<input type='submit' value = 'submit'></submit>
		</form>

	<% end %>

</div>

</div>